{
  "name": "@tm/api",
  "version": "0.1.0",
  "description": "Task Master Pro REST API Server",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "echo 'API built via root tsdown'",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome check src",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t taskmaster-api .",
    "docker:run": "docker run -p 3000:3000 taskmaster-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "express-rate-limit": "^7.1.5",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.4",
    "@tm/core": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "api",
    "rest",
    "task-management",
    "taskmaster"
  ],
  "author": "Task Master Pro",
  "license": "MIT"
}
